<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules>
        <FaultRule name="invalid_key_rule">
            <Step>
                <Name>ApiKeyFaultMessage</Name>
            </Step>
            <Condition>(fault.name = "InvalidApiKey")</Condition>
        </FaultRule>
    </FaultRules>
    <Flows>
        <Flow name="GetCartsByUser">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>ValidateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/users/{id}/carts") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="CreateUser">
            <Description/>
            <Request>
                <Step>
                    <Name>SetRestrictedResourcePost</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>VerifyKey</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/users") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="AccessToken">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>ValidateUser</Name>
                </Step>
                <Step>
                    <Condition>streetcarts.user.valid = true</Condition>
                    <FaultRules/>
                    <Name>GenerateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/accesstoken") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="GetCarts">
            <Description>Gets all the carts.</Description>
            <Request>
                <Step>
                    <Name>VerifyKey</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>RemoveApiKey</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/carts") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="GetCart">
            <Description>Gets cart by id.</Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>ValidateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/carts/{id}") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="GetMenusForCart">
            <Description>Gets the menus for a cart.</Description>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>VerifyKey</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>RemoveApiKey</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/carts/{id}/menus") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="GetUser">
            <Description>Get user info.</Description>
            <Request>
                <Step>
                    <Name>ValidateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/user/{id}") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="GetUsers">
            <Description/>
            <Request>
                <Step>
                    <Name>ValidateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/users") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="UpdateUser">
            <Description/>
            <Request>
                <Step>
                    <Name>ValidateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/users") and (request.verb = "PUT")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/streetcarts</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>