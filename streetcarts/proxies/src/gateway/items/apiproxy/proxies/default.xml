<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Spike-Arrest</Name>
            </Step>
            <Step>
                <Name>Quota</Name>
            </Step>
            <Step>
                <Name>Get-Item-ID</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="Get Menu Item">
            <Description>Get Menu Item</Description>
            <Request>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
                <Step>
                    <Name>Got-Item-Response</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/*") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Update Menu Item">
            <Description>Update Menu Item</Description>
            <Request>
                <Step>
                    <Name>SetRestrictedResource</Name>
                </Step>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>ValidateToken</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/*") and (request.verb = "PUT")</Condition>
        </Flow>
        <Flow name="Delete Menu Item">
            <Description>Delete Menu Item</Description>
            <Request>
                <Step>
                    <Name>SetRestrictedResource</Name>
                </Step>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>ValidateToken</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/{item_id}") and (request.verb = "DELETE")</Condition>
        </Flow>
        <Flow name="Get All Menu Items">
            <Description>Get All Menu Items</Description>
            <Request>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
                <Step>
                    <Name>Get-Items-Response</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>request.verb="GET"</Condition>
        </Flow>
        <Flow name="Create Menu Item">
            <Description>Create Menu Item</Description>
            <Request>
                <Step>
                    <Name>Create-Item-Response</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>request.verb="POST"</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/streetcarts/items</BasePath>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="test">
        <Condition>organization.name = "apptraining"</Condition>
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
    <RouteRule name="production">
        <Condition>organization.name = "docfood"</Condition>
        <TargetEndpoint>docfood</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>