<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Verify-API-Key-TEMPONPREFLOW</Name>
            </Step>
            <Step>
                <Name>Spike-Arrest</Name>
            </Step>
            <Step>
                <Name>Quota</Name>
            </Step>
            <Step>
                <Name>Get-Item-ID</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="Get Menu Item">
            <Description>Get Menu Item</Description>
            <Request>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
                <Step>
                    <Name>Got-Item-Response</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/*") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Update Menu Item">
            <Description>Update Menu Item</Description>
            <Request>
                <Step>
                    <Name>Update-Item-Response</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/*") and (request.verb = "PUT")</Condition>
        </Flow>
        <Flow name="Delete Menu Item">
            <Description>Delete Menu Item</Description>
            <Request>
                <Step>
                    <Name>Delete-Item-Response</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/*") and (request.verb = "DELETE")</Condition>
        </Flow>
        <Flow name="Get All Menu Items">
            <Description>Get All Menu Items</Description>
            <Request>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
                <Step>
                    <Name>Get-Items-Response</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>request.verb="GET"</Condition>
        </Flow>
        <Flow name="Create Menu Item">
            <Description>Create Menu Item</Description>
            <Request>
                <Step>
                    <Name>Create-Item-Response</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>request.verb="POST"</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/streetcarts/items</BasePath>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>