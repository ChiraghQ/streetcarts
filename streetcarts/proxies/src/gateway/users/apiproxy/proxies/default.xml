<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules>
        <FaultRule name="invalid_key_rule">
            <Condition>(fault.name = "InvalidApiKey")</Condition>
            <Step>
                <FaultRules/>
                <Name>ApiKeyFaultMessage</Name>
            </Step>
        </FaultRule>
    </FaultRules>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Spike-Arrest</Name>
            </Step>
            <Step>
                <Name>Quota</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="Get Users">
            <Description>Get all user info.</Description>
            <Request>
                <Step>
                    <Name>Validate-Admin-Token</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Get User By ID">
            <Description>Get user info.</Description>
            <Request>
                <Step>
                    <Name>Validate-Admin-Token</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/{user_id}") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Delete User">
            <Description>Delete User</Description>
            <Request>
                <Step>
                    <Name>Validate-Admin-Token</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/{user_id}") and (request.verb = "DELETE")</Condition>
        </Flow>
        <Flow name="Create User">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>Remove-API-Key</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/streetcarts/users</BasePath>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>