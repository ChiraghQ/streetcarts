<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Spike-Arrest</Name>
            </Step>
            <Step>
                <Name>Quota</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="Generate Access Token">
            <Description/>
            <Request>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
                <Step>
                    <Name>GetDataManagerKey</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>ValidateUser</Name>
                </Step>
                <Step>
                    <Condition>streetcarts.user.valid = true</Condition>
                    <FaultRules/>
                    <Name>GenerateToken</Name>
                </Step>
                <Step>
                    <Condition>streetcarts.user.valid = false</Condition>
                    <FaultRules/>
                    <Name>InvalidUserFault</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/streetcarts/accesstoken</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>