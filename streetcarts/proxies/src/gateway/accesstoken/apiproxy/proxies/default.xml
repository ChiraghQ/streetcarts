<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Spike-Arrest</Name>
            </Step>
            <Step>
                <Name>Quota</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="AccessToken">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>ValidateUser</Name>
                </Step>
                <Step>
                    <Condition>streetcarts.user.valid = true</Condition>
                    <FaultRules/>
                    <Name>GenerateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/accesstoken") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Generate Access Token">
            <Description>Generate Access Token</Description>
            <Request>
                <Step>
                    <Name>Access-Token-Response</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>request.verb="POST"</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/streetcarts/accesstoken</BasePath>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>