<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="Add-Menu-Item-to-Menu-Response">
    <DisplayName>Add Menu Item to Menu Response</DisplayName>
    <Set>
        <Payload contentType="text/plain">Added itemID = {menuRequest.itemID} to menuID = {menuRequest.menuID}</Payload>
        <StatusCode>201</StatusCode>
        <ReasonPhrase>Success</ReasonPhrase>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="true" transport="http" type="response"/>
</AssignMessage>