<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Spike-Arrest</Name>
            </Step>
            <Step>
                <Name>Quota</Name>
            </Step>
            <Step>
                <Name>GetCartId</Name>
            </Step>
            <Step>
                <Name>SetRestrictedResource</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="Get FoodCart Items">
            <Description>Get FoodCart Items</Description>
            <Request>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/{cart_id}/items") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Get FoodCart Menus">
            <Description>Get FoodCart Menus</Description>
            <Request>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/{cart_id}/menus") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Get FoodCart">
            <Description>Get a FoodCart</Description>
            <Request>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/{cart_id}") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Update FoodCart">
            <Description>Update FoodCart</Description>
            <Request>
                <Step>
                    <Name>ValidateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/{cart_id}") and (request.verb = "PUT")</Condition>
        </Flow>
        <Flow name="Delete FoodCart">
            <Description>Delete FoodCart</Description>
            <Request>
                <Step>
                    <Name>ValidateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/{cart_id}") and (request.verb = "DELETE")</Condition>
        </Flow>
        <Flow name="Get FoodCarts">
            <Description>Get FoodCarts</Description>
            <Request>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Create FoodCart">
            <Description>Create FoodCart</Description>
            <Request>
                <Step>
                    <Name>ValidateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Create Cart Menu">
            <Description>Create Foodcart Menu</Description>
            <Request>
                <Step>
                    <Name>ValidateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/{cart_id}/menus") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Create Cart Item">
            <Description>Create Foodcart Item</Description>
            <Request>
                <Step>
                    <Name>ValidateToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/{cart_id}/items") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="Get Menu Items">
            <Description/>
            <Request>
                <Step>
                    <Name>Verify-API-Key</Name>
                </Step>
                <Step>
                    <Name>Remove-API-Key</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/menus/{menu_id}/items") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/streetcarts/foodcarts</BasePath>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>